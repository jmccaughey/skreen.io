		<servlet-class>com.deskblast.server.EchoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EchoServlet</servlet-name>
		<url-pattern>/echo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateBlastServlet</servlet-name>
