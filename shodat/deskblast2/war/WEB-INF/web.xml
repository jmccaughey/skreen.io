		<url-pattern>/createBlast</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>StartBlastServlet</servlet-name>
		<servlet-class>com.deskblast.server.StartBlastServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StartBlastServlet</servlet-name>
		<url-pattern>/startBlast</url-pattern>
	</servlet-mapping>

